= simple_form_for @compliment, as: :kudos, html: { class: 'form' } do |f|

  %fieldset.form-field
    = f.association :complimentee, as: :receiver, input_html: { class: 'form-select' }, label_html: { class: 'form-label' }, include_blank: false
  %fieldset.form-field
    = f.input :text, as: :text, input_html: { class: 'form-input', rows: '5' }, label_html: { class: 'form-label' }

  = f.submit class: "btn"
