= simple_form_for @quote, html: { class: 'form' } do |f|
  = f.hidden_field :quoter_id, value: current_user.id

  %fieldset.form-field
    = f.association :quotee, input_html: { class: 'form-select' }, label_html: { class: 'form-label' }
  %fieldset.form-field
    = f.input :text, as: :text, input_html: { class: 'form-input', rows: '5' }, label_html: { class: 'form-label' }

  = f.submit class: "btn"
